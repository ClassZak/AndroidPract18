<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpeciesInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linearLayout1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textIsSelectable="true"
                android:textSize="30dp"
                android:id="@+id/speciesName"/>



            <TextView
                android:id="@+id/SpeciesInfo1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textIsSelectable="true"
                android:text="" />

            <TextView
                android:id="@+id/SpeciesInfo2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textIsSelectable="true"
                android:text="" />

            <TextView
                android:id="@+id/SpeciesInfo3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textIsSelectable="true"
                android:text="" />

            <TextView
                android:id="@+id/SpeciesInfo4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textIsSelectable="true"
                android:text="" />

            <TextView
                android:id="@+id/SpeciesInfo5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textIsSelectable="true"
                android:text="" />

            <TextView
                android:id="@+id/SpeciesInfo6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textIsSelectable="true"
                android:text="" />

            <TextView
                android:id="@+id/SpeciesInfo7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textIsSelectable="true"
                android:text="" />

            <TextView
                android:id="@+id/SpeciesInfo8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textIsSelectable="true"
                android:text="" />
            <ImageView
                android:layout_gravity="center"
                android:layout_width="320dp"
                android:layout_height="320dp"
                android:id="@+id/speciesImage"/>
        </LinearLayout>
    </ScrollView>


</FrameLayout>